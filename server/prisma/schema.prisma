// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  password        String
  firstName       String
  lastName        String
  role            String   @default("USER")
  conceptionLevel Int      @default(0)
  createdAt       DateTime @default(now())
  orders          Order[]
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  products    Product[]
}

// üè∫ Le mod√®le central pour vos bouteilles
model Product {
  id          String          @id @default(uuid())
  name        String
  description String?
  image       String?
  categoryId  String
  category    Category        @relation(fields: [categoryId], references: [id])
  volumes     ProductVolume[] // üè∫ Relation : un produit a plusieurs formats
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// üè∫ Les d√©clinaisons de contenance pour chaque produit
model ProductVolume {
  id         String      @id @default(uuid())
  size       Float // 25, 50, 1...
  unit       String // "cl" ou "L"
  price      Float
  stock      Int         @default(0)
  productId  String
  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
}

model Workshop {
  id           String      @id @default(uuid())
  level        Int         @unique
  title        String
  description  String
  image        String?
  format       String
  availability String?
  quote        String
  price        Float
  orderItems   OrderItem[]
}

model Order {
  id        String      @id @default(cuid())
  reference String      @unique
  status    String      @default("EN PR√âPARATION")
  total     Float
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  createdAt DateTime    @default(now())
}

model OrderItem {
  id       String @id @default(cuid())
  quantity Int
  price    Float
  orderId  String
  order    Order  @relation(fields: [orderId], references: [id])

  // L'item pointe maintenant vers le volume sp√©cifique choisi
  volumeId   String?
  volume     ProductVolume? @relation(fields: [volumeId], references: [id])
  workshopId String?
  workshop   Workshop?      @relation(fields: [workshopId], references: [id])
}
