// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  password  String
  firstName String
  lastName  String
  phone     String?

  // üè∫ Statut Institutionnel
  role       String  @default("USER") // "USER", "PRO", "ADMIN"
  isEmployee Boolean @default(false) // üè∫ Nouveau : Identifie le particulier rattach√© √† un CE
  memberCode String? @unique

  // üè∫ Attributs Professionnels (CE)
  companyName String?
  siret       String? // üè∫ @unique retir√© pour permettre le rattachement de plusieurs salari√©s

  conceptionLevel Int      @default(0)
  createdAt       DateTime @default(now())

  orders      Order[]
  ownedGroups CompanyGroup[] // Groupes g√©r√©s par ce compte pro (PRO uniquement)
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  products    Product[]
}

model Product {
  id          String          @id @default(uuid())
  name        String
  description String?
  image       String?
  categoryId  String
  category    Category        @relation(fields: [categoryId], references: [id])
  volumes     ProductVolume[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model ProductVolume {
  id         String      @id @default(uuid())
  size       Float
  unit       String
  price      Float
  stock      Int         @default(0)
  productId  String
  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
}

model Workshop {
  id           String      @id @default(uuid())
  level        Int
  type         String      @default("PARTICULIER") // "PARTICULIER" ou "ENTREPRISE"
  title        String
  description  String
  image        String?
  color        String?
  format       String
  availability String?
  quote        String
  price        Float
  orderItems   OrderItem[]

  @@unique([level, type])
}

model CompanyGroup {
  id           String @id @default(cuid())
  name         String
  currentLevel Int    @default(0)
  totalSlots   Int    @default(25) // üè∫ Suivi du volume initial (25, 35...)

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  participants Participant[]
  orderItems   OrderItem[]
  createdAt    DateTime      @default(now())
}

model Order {
  id         String      @id @default(cuid())
  reference  String      @unique
  status     String      @default("EN ATTENTE")
  total      Float
  isBusiness Boolean     @default(false)
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  items      OrderItem[]
  createdAt  DateTime    @default(now())
}

model OrderItem {
  id       String @id @default(cuid())
  quantity Int
  price    Float
  orderId  String
  order    Order  @relation(fields: [orderId], references: [id])

  participants Participant[]

  groupNames String?

  companyGroupId String?
  companyGroup   CompanyGroup? @relation(fields: [companyGroupId], references: [id])

  workshopId String?
  workshop   Workshop?      @relation(fields: [workshopId], references: [id])
  volumeId   String?
  volume     ProductVolume? @relation(fields: [volumeId], references: [id])
}

model Participant {
  id        String  @id @default(cuid())
  firstName String?
  lastName  String?
  phone     String?
  email     String?

  memberCode String?
  userId     String?

  companyGroupId String?
  companyGroup   CompanyGroup? @relation(fields: [companyGroupId], references: [id])

  orderItemId String
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
}
